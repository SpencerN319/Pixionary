<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/textPlaylistName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textPlaylistCreator"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/textPlaylistCreator"
        android:layout_toStartOf="@+id/textPlaylistCreator"
        android:background="@color/colorPrimaryRed"
        android:text="PlaylistName"
        android:gravity="center"
        android:textAlignment="textStart"
        android:textColor="@color/colorPrimaryText" />

    <TextView
        android:id="@+id/textPlaylistCreator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/preview"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/preview"
        android:layout_toStartOf="@+id/preview"
        android:background="@color/colorPrimaryRed"
        android:gravity="center"
        android:text="PlaylistCreator"
        android:textAlignment="textStart"
        android:textColor="@color/colorPrimaryText" />

    <Button
        android:id="@+id/preview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/play"
        android:layout_toStartOf="@+id/play"
        android:background="@color/colorPrimaryYellow"
        android:focusable="false"
        android:onClick="preview"
        android:text="Preview"
        android:textColor="@color/colorPrimaryText" />

    <Button
        android:id="@+id/play"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/preview"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:background="@color/colorPrimaryPurple"
        android:focusable="false"
        android:onClick="play"
        android:text="Play"
        android:textColor="@color/colorPrimaryText" />




</RelativeLayout>
